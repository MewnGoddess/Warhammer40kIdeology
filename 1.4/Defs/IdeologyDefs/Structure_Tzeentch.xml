<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <MemeDef ParentName="BEWH_StructureBase">
    <defName>BEWH_Tzeentch</defName>
    <label>Tzeentch</label>
    <description>Tzeentch rules all.</description>
    <iconPath>UI/Icons/Chaos/TzeentchWhiteIcon</iconPath>
    <worshipRoomLabel>Tzeentch Shrine</worshipRoomLabel>
    <deityNameMakerOverride>BEWH_NamerDeityTzeentch</deityNameMakerOverride>
    <deityTypeMakerOverride>BEWH_DeityTypeMakerTzeentch</deityTypeMakerOverride>
    <generalRules>
      <rulesStrings>
        <li>memeAdjective->cultist of Tzeentch</li>
        <li>memeLeaderNoun->chaos lord of Tzeentch</li>
        <li>memeMoralist->dark apostle of Tzeentch</li>
      </rulesStrings>
    </generalRules>
    <descriptionMaker>
      <patterns>
        <li>
          <def>BEWH_ChaosIdeoPattern</def>
        </li>
      </patterns>
      <constants>
        <li>
          <key>BEWH_TzeentchStructure</key>
          <value>true</value>
        </li>
      </constants>
    </descriptionMaker>
    <symbolPacks>
      <li>
        <ideoName>Tzeentch</ideoName>
        <theme>faith</theme>
        <adjective>chaotic</adjective>
        <member>cultist of Tzeentch</member>
      </li>
    </symbolPacks>
  </MemeDef>


  <!-- Icon for Structure-->
  <IdeoIconDef>
    <defName>BEWH_TzeentchIcon</defName>
    <iconPath>UI/Icons/Chaos/TzeentchWhiteIcon</iconPath>
    <memes>
      <li>BEWH_Tzeentch</li>
    </memes>
  </IdeoIconDef>
  <IdeoColorDef>
    <defName>TzeentchBlue</defName>
    <colorDef>TzeentchBlue</colorDef>
    <memes>
      <li>BEWH_Tzeentch</li>
    </memes>
  </IdeoColorDef>
  <ColorDef ParentName="IdeoColorBase">
    <defName>TzeentchBlue</defName>
    <color>(37, 52, 209)</color>
  </ColorDef>


  <!-- Rule Packs -->
  <RulePackDef>
    <defName>BEWH_NamerDeityTzeentch</defName>
    <rulePack>
      <rulesStrings>
        <li>r_deityName->Lord of Change</li>
        <li>r_deityName->Architect of Fate</li>
        <li>r_deityName->Tzeentch</li>
      </rulesStrings>
    </rulePack>
  </RulePackDef>

  <RulePackDef>
    <defName>BEWH_DeityTypeMakerTzeentch</defName>
    <rulePack>
      <rulesStrings>
        <li>r_deityType->Tzeentch</li>
      </rulesStrings>
    </rulePack>
  </RulePackDef>

</Defs>